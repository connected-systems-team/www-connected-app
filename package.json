{
    "name": "www-connected-app",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": "22.9.0"
    },
    "scripts": {
        "dev": "next dev --experimental-https --port 2666 --hostname localhost.connected.app",
        "dev:http": "next dev",
        "dev:wrangler": "wrangler dev --var STRUCTURE_ENV:development --local-protocol \"https\" --port 2666 --ip localhost.connected.app --https-key-path \"./certificates/localhost-key.pem\" --https-cert-path \"./certificates/localhost.pem\"",
        "dev:kam": "next dev --experimental-https --port 2666 --hostname localhost.kamsdev.workers.dev",
        "lint": "eslint . --cache --cache-location .cache/eslint/",
        "lint:open": "npx eslint . --format json | jq -r '.[] | select(.errorCount > 0 or .warningCount > 0) | .filePath' | xargs -r code-insiders",
        "compile": "npm run lint && tsc --noEmit --incremental",
        "build": "npm run lint && opennextjs-cloudflare build",
        "build:websocketsharedworker": "node libraries/structure/source/api/web-sockets/shared-worker/scripts/BuildWebSocketSharedWorker.mjs",
        "preview": "opennextjs-cloudflare && wrangler dev --var STRUCTURE_ENV:development --local-protocol \"https\" --port 2666 --ip localhost.connected.app --https-key-path \"./certificates/localhost-key.pem\" --https-cert-path \"./certificates/localhost.pem\"",
        "deploy": "npm run build && wrangler deploy",
        "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
        "api": "npm run api:generate && npm run api:format",
        "api:generate": "libraries/structure/scripts/api.sh --api-directory api-connected-app",
        "graphql:generate": "graphql-codegen --config libraries/structure/source/api/graphql/GraphQlCodeGeneratorConfiguration.ts && npm run graphql:prettier",
        "graphql:prettier": "npx @system-inc/prettier@3.2.1 --write \"./app/_api/graphql/**/*\" \"./libraries/structure/source/api/graphql/**/*\""
    },
    "dependencies": {
        "@apollo/client": "^3.13.8",
        "@graphql-codegen/typescript-operation-metadata": "https://github.com/kamsheffield/graphql-code-generator-community/releases/download/typescript-operation-metadata-v1.0.0/graphql-codegen-typescript-operation-metadata-1.0.0.tgz",
        "@hookform/resolvers": "^5.1.1",
        "@lexical/react": "^0.31.2",
        "@phosphor-icons/react": "^2.1.10",
        "@radix-ui/react-accordion": "^1.2.11",
        "@radix-ui/react-alert-dialog": "^1.1.14",
        "@radix-ui/react-checkbox": "^1.3.2",
        "@radix-ui/react-collapsible": "^1.1.2",
        "@radix-ui/react-context-menu": "^2.2.15",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-dropdown-menu": "^2.1.15",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-popover": "^1.1.14",
        "@radix-ui/react-radio-group": "^1.3.7",
        "@radix-ui/react-scroll-area": "^1.2.9",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-slider": "^1.3.5",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-switch": "^1.2.5",
        "@radix-ui/react-tabs": "^1.1.12",
        "@radix-ui/react-toggle-group": "^1.1.10",
        "@radix-ui/react-tooltip": "^1.2.7",
        "@radix-ui/react-visually-hidden": "^1.1.0",
        "@react-spring/web": "^9.7.5",
        "@react-three/drei": "^9.122.0",
        "@react-three/fiber": "^8.18.0",
        "@stripe/react-stripe-js": "^2.9.0",
        "@stripe/stripe-js": "^4.10.0",
        "@tailwindcss/container-queries": "^0.1.1",
        "@use-gesture/react": "^10.3.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "jotai": "^2.12.5",
        "motion": "^12.17.3",
        "next": "^14.2.30",
        "nuqs": "^1.20.0",
        "react": "^18.3.1",
        "react-advanced-cropper": "^0.20.1",
        "react-colorful": "^5.6.1",
        "react-cookie": "^7.2.2",
        "react-day-picker": "^8.10.1",
        "react-dom": "^18.3.1",
        "react-easy-crop": "^5.4.2",
        "react-hook-form": "^7.57.0",
        "react-markdown": "^9.1.0",
        "react-syntax-highlighter": "^15.6.1",
        "react-use-measure": "^2.1.7",
        "recharts": "^2.15.3",
        "rehype-highlight": "^7.0.2",
        "remark-custom-header-id": "^1.0.0",
        "remark-gfm": "^4.0.1",
        "stripe": "^17.7.0",
        "tailwind-merge": "^2.6.0",
        "tailwindcss-animate": "^1.0.7",
        "valibot": "^1.1.0",
        "vaul": "^1.1.2"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250612.0",
        "@eslint/js": "^9.26.0",
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/client-preset": "^4.8.2",
        "@next/eslint-plugin-next": "^15.3.3",
        "@opennextjs/cloudflare": "^1.2.1",
        "@svgr/webpack": "^8.1.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.19.0",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.28.0",
        "eslint-config-next": "15.3.2",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-compiler": "^0.0.0-experimental-a97cca1-20240529",
        "eslint-plugin-react-hooks": "^5.2.0",
        "postcss": "^8.5.5",
        "prettier": "npm:@system-inc/prettier@^3.2.1",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0",
        "wrangler": "^4.20.0"
    },
    "overrides": {
        "prettier-plugin-tailwindcss": {
            "prettier": "npm:@system-inc/prettier@3.2.1"
        }
    },
    "prettier": {
        "plugins": [
            "prettier-plugin-tailwindcss"
        ],
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "spaceBeforeFunctionParen": false,
        "printWidth": 120
    },
    "postcss": {
        "plugins": [
            "tailwindcss",
            "autoprefixer"
        ]
    },
    "graphql": {
        "projects": {
            "app": {
                "schema": [
                    "./app/_api/graphql/schemas/**/*.graphql"
                ],
                "documents": [
                    "./app/_modules/**/api/**/*.graphql"
                ]
            },
            "structure": {
                "schema": [
                    "./libraries/structure/source/api/graphql/schemas/**/*.graphql"
                ],
                "documents": [
                    "./libraries/structure/source/modules/**/api/**/*.graphql"
                ]
            }
        }
    }
}
