{
    "name": "structure-next-template",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": "22.9.0"
    },
    "scripts": {
        "dev": "next dev --port 7878",
        "dev:wrangler": "wrangler dev --port 7878",
        "build": "cloudflare",
        "preview": "cloudflare && wrangler dev --port 7878",
        "deploy": "cloudflare && wrangler deploy",
        "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
        "lint": "next lint",
        "api": "libraries/structure/scripts/api.sh",
        "graphql:generate": "graphql-codegen --config libraries/structure/source/api/GraphQlCodeGeneratorConfiguration.ts"
    },
    "dependencies": {
        "@apollo/client": "^3.11.8",
        "@graphql-codegen/typescript-operation-metadata": "https://github.com/kamsheffield/graphql-code-generator-community/releases/download/typescript-operation-metadata-v1.0.0/graphql-codegen-typescript-operation-metadata-1.0.0.tgz",
        "@radix-ui/react-accordion": "^1.2.1",
        "@radix-ui/react-context-menu": "^2.2.2",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-dropdown-menu": "^2.1.2",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-popover": "^1.1.2",
        "@radix-ui/react-scroll-area": "^1.2.0",
        "@radix-ui/react-select": "^2.1.2",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-tooltip": "^1.1.3",
        "@radix-ui/react-visually-hidden": "^1.1.0",
        "@react-spring/web": "^9.7.5",
        "@use-gesture/react": "^10.3.1",
        "clsx": "^2.1.1",
        "jotai": "^2.10.1",
        "next": "^14.2.15",
        "nuqs": "^2.0.1",
        "react": "^18.3.1",
        "react-colorful": "^5.6.1",
        "react-cookie": "^7.2.1",
        "react-day-picker": "^8.10.1",
        "react-dom": "^18.3.1",
        "react-easy-crop": "^5.1.0",
        "react-hook-form": "^7.53.1",
        "react-markdown": "^9.0.1",
        "react-syntax-highlighter": "^15.6.1",
        "react-use-measure": "^2.1.1",
        "recharts": "^2.13.0",
        "rehype-highlight": "^7.0.1",
        "remark-custom-header-id": "^1.0.0",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241018.0",
        "@eslint/js": "^9.13.0",
        "@graphql-codegen/cli": "^5.0.3",
        "@graphql-codegen/client-preset": "^4.4.0",
        "@opennextjs/cloudflare": "^0.2.1",
        "@svgr/webpack": "^8.1.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.16.14",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@typescript-eslint/eslint-plugin": "^7.17.0",
        "@typescript-eslint/parser": "^7.17.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.57.1",
        "eslint-config-next": "14.1.4",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-compiler": "^0.0.0-experimental-a97cca1-20240529",
        "postcss": "^8.4.47",
        "prettier": "npm:@system-inc/prettier@^3.2.1",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "tailwindcss": "^3.4.14",
        "typescript": "^5.6.3",
        "typescript-eslint": "^7.18.0",
        "wrangler": "^3.82.0"
    },
    "overrides": {
        "prettier-plugin-tailwindcss": {
            "prettier": "npm:@system-inc/prettier@3.2.1"
        }
    },
    "prettier": {
        "plugins": [
            "prettier-plugin-tailwindcss"
        ],
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "spaceBeforeFunctionParen": false,
        "printWidth": 120
    },
    "postcss": {
        "plugins": [
            "tailwindcss",
            "autoprefixer"
        ]
    },
    "graphql": {
        "projects": {
            "app": {
                "schema": [
                    "./source/api/schemas/**/*.graphql"
                ],
                "documents": [
                    "./source/modules/**/api/**/*.graphql",
                    "./libraries/structure/source/modules/**/api/**/*.graphql"
                ]
            }
        }
    }
}
